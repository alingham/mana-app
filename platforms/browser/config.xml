<?xml version='1.0' encoding='utf-8'?>
<widget id="com.arakuraschool.pb4l" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>PB4L - Arakura School</name>
    <description>
        App that assists teachers in identifying behaviours from our Expectation Matrix.
    </description>
    <author email="al@alingham.com" href="http://www.alingham.com">
        Al Ingham
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="http://*/*" />
    <allow-intent href="http://www.arakura.school.nz/*" />
    <allow-intent href="http://pb4l.tki.org.nz/*" />
    <allow-intent href="https://unpkg.com.nz/*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
</widget>
